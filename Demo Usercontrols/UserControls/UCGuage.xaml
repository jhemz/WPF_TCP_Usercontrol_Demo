                        </usercontrols:Arc.RenderTransform>
                    </usercontrols:Arc>
                    <usercontrols:Arc Center="200, 200"  x:Name="zone3"
                              StrokeThickness="7"
                             Stroke="Transparent" 
                             SnapsToDevicePixels="True"
                             StartAngle="4.32" 
                             EndAngle="10" 
                             Radius="147">
                        <usercontrols:Arc.RenderTransform>
