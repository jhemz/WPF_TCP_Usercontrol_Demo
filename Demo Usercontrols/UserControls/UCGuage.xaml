                    </Grid>


                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2"/>
                    </Border.Effect>
                </Border>
                <Border CornerRadius="8" Width="16" Height="16" Margin="330, 170, 0, 0">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF383838" Offset="0.997"/>
