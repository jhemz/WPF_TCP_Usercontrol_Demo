                             StartAngle="4.32" 
                             EndAngle="10" 
                             Radius="147">
                        <usercontrols:Arc.RenderTransform>
                            <RotateTransform CenterX="200" CenterY="200"
                                     Angle="73.5"/>
                        </usercontrols:Arc.RenderTransform>
                    </usercontrols:Arc>
                    <usercontrols:Arc Center="200, 200" x:Name="zone5"
                              StrokeThickness="7"
                             Stroke="Red" 
                             SnapsToDevicePixels="True"
                             StartAngle="4.32" 
                             EndAngle="10" 
                             Radius="147">
